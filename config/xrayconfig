:editor: "(vim --serverlist | grep VIM && vim --servername VIM --remote $file) || (TPANE=$(tmux list-panes -s -F '#{window_index}.#{pane_index} #{pane_current_command}' | grep Vim | head -1 | cut -f 1 -d ' '); open -a iTerm && (tmux list-sessions || tmux new -d 'vim $file') && tmux send-keys -t $TPANE \":e $file\" \"C-j\" && tmux select-pane -t $TPANE || /usr/local/bin/tmux new-window 'vim $file')"
